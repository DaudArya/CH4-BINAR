<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#707070"
        app:cardCornerRadius="10dp">

        <View
            android:id="@+id/viewPriority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:background="@drawable/teal_dot"
            android:layout_margin="10dp">

        </View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/noteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/app_name"
                android:maxLines="1"
                android:textSize="18dp"
                android:textColor="@color/white">
            </TextView>
            <TextView
                android:id="@+id/noteSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aplikasi dapat mengirimkan data ke screen lain serta
dapat menerima data dari screen sebelumnya. Untuk
CRUD data dapat menggunakan dialog."
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:textColor="#D8D8D8">
            </TextView>

            <TextView
                android:id="@+id/notesdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="24 September 2022"
                android:maxLines="1"
                android:textSize="14dp"
                android:textColor="@color/white">
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>