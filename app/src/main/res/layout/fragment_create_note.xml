<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".ui.fragment.CreateNoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Title Notes"
            android:padding="15dp"
            android:textColorHint="@color/cardview_light_background"
            android:background="@drawable/edit_txt_shape">
        </EditText>

        <EditText
            android:id="@+id/editSubitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Subtitle"
            android:padding="15dp"

            android:textColorHint="@color/cardview_light_background"
            android:background="@drawable/edit_txt_shape">
        </EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/pEasy"
                android:layout_marginStart="20dp"
                android:background="@drawable/teal_dot">
            </ImageView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/pNormal"
                android:layout_marginStart="20dp"
                android:background="@drawable/purple_dot">
            </ImageView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/pImportant"
                android:layout_marginStart="20dp"
                android:background="@drawable/purple2_dot">
            </ImageView>


        </LinearLayout>

        <EditText
            android:id="@+id/editNote"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"
            android:hint="Write Your Note Here...."
            android:padding="15dp"
            android:gravity="start"
            android:textColorHint="@color/cardview_light_background"
            android:background="@drawable/edit_txt_shape">
        </EditText>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEditSaveNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_save"
        android:layout_gravity="bottom|right"
        android:layout_margin="26dp">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</FrameLayout>